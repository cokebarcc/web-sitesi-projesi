rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write to their own paths
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Specific rules for detailed-schedules
    match /detailed-schedules/{hospital}/{year}/{month}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Specific rules for physician-data (muayene and ameliyat)
    match /physician-data/{type}/{hospital}/{year}/{month}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
